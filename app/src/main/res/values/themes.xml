<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="MyThemeRed" parent="MyBaseTheme">
        <item name="superColor">@color/red</item>
    </style>

    <style name="MyThemeBlue" parent="MyBaseTheme">
        <item name="superColor">@color/blue</item>
    </style>

    <style name="MyThemeGreen" parent="MyBaseTheme">
        <item name="superColor">@color/green</item>
    </style>

    <style name="MyBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">?superColor</item>
        <item name="colorPrimary">?superColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">?superColor</item>
        <item name="colorOnPrimaryContainer">?superColor</item>
        <item name="colorPrimaryInverse">?superColor</item>
        <item name="colorSecondary">?superColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">?superColor</item>
        <item name="colorOnSecondaryContainer">?superColor</item>
        <item name="colorTertiary">?superColor</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">?superColor</item>
        <item name="colorOnTertiaryContainer">?superColor</item>
        <item name="android:statusBarColor">?superColor</item>
        <item name="chipStyle">@style/myChipStyle</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
        <item name="tabStyle">@style/myTabStyle</item>
        <item name="textAppearanceHeadline1">@style/MyTextAppearanceHeadline1</item>
        <item name="materialButtonStyle">@style/myMaterialButtonStyle</item>
    </style>

    <style name="myMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyTextAppearanceHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/azeret</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!--    TODO colorSurface-->
    <style name="myTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">@color/orange</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
        <item name="chipBackgroundColor">@color/light_gray</item>
        <item name="rippleColor">@color/light_gray</item>
        <item name="chipStrokeColor">@color/light_gray</item>
        <item name="android:windowBackground">@color/light_gray</item>
    </style>

    <style name="myChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">?superColor</item>
        <item name="rippleColor">@color/light_gray</item>
        <item name="chipStrokeColor">@color/light_gray</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="cornerSize">4dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="myChipChoiceStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/my_choice_chip_background_color</item>
    </style>
    <!--    TODO ShapeAppearance только для чипов-->
    <style name="myBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">?superColor</item>
    </style>
</resources>